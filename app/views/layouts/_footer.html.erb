<footer class="footer">
  <% if params[:country_id] %>
    <div>
      <% country = Country.find(params[:country_id]) %>
      <strong>Name:</strong>            <%= country.name %>
      <strong>Year:</strong>            <%= country.year %>
      <strong>Current Degree:</strong>  <%= country.deg %>
      <strong>Citizens Alive:</strong>  <%= country.civ_num %>
      <strong>Life level:</strong>      <%= country.life_level %>
      <strong>Budget:</strong>          <%= country.budget %>
    </div>
    <div>
    <% if country.resilience == "civil_war" %>
      <strong>Resilience:</strong>           <span style="color: red"><%= country.resilience %> (civ_num and budget declining)</span>
    <% else %>
    <strong>Resilience:</strong>           <%= country.reg_rel %>
    <% end %>
    <% if country.reg_rel == "war" %>
      <strong>Reg rel:</strong>           <span style="color: red"><%= country.resilience %> (civ_num and budget declining)</span>
    <% else %>
    <strong>Reg rel:</strong>           <%= country.reg_rel %>
    <% end %>
    <strong>Agriculture:</strong>       <%= country.agriculture %>
    <strong>Education:</strong>         <%= country.education %>
    <strong>Security:</strong>          <%= country.security %>
    <strong>Comms:</strong>             <%= country.comms %>
    <strong>Social sec:</strong>        <%= country.social_sec %>
    <strong>Health:</strong>            <%= country.health %>
    <strong>Water:</strong>             <%= country.water %>
    <strong>Energy:</strong>            <%= country.energy %>
    </div>
  <% end %>
</footer>
