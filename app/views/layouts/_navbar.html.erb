<% if params[:country_id] %>
  <% country = Country.find(params[:country_id]) %>
  <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-bottom" dir="rtl">
    <div class="d-flex flex-column bd-highlight w-100  line-height-1">
      <div class="bd-highlight w-100">
        <div class="d-flex flex-row bd-highlight w-100">
          <div class="pr-2 bd-highlight flex-fill "><div class="navbar-brand font-bold" ><%= country.name %></div></div>
          <div class="pr-2 bd-highlight flex-fill "><i class="material-icons">access_time</i><%= country.year %></div>
          <div class="pr-2 bd-highlight flex-fill "><strong><i class="material-icons">people_outline</i></strong><%= country.civ_num %></div>
          <div class="pr-2 bd-highlight flex-fill "><strong><i class="material-icons">attach_money</i></strong><%= country.budget %></div>
        </div>
      </div>
      <div class="bd-highlight w-100">
        <div class="d-flex flex-row bd-highlight">
          <div class="pr-2 bd-highlight flex-fill"><strong>התחממות:</strong>  <%= country.deg %>°C</div>
          <!-- <div class="pr-2 bd-highlight flex-fill"><strong>איכות חיים:</strong>      <%= country.life_level %></div> -->
          <div class="pr-2 bd-highlight flex-fill">
            <!-- <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"> -->
              <i class="material-icons" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">menu</i>
            <!-- </button> -->
          </div>
        </div>
      </div>
    </div>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav p-0">
      <li class="nav-item active">
        <% if country.resilience == "civil_war" %>
        <strong><%= Country.human_attribute_name(:resilience) %>:</strong>           <%= reshash[country.resilience.to_sym] %> <span style="color: red">(<%= I18n.t("navbar.wars") %>)</span>
        <% else %>
        <strong><%= Country.human_attribute_name(:resilience) %>:</strong>           <%= reshash[country.resilience.to_sym].split[0] %>
        <% end %>
      </li>
      <li class="nav-item">
        <% if country.reg_rel == "war" %>
        <strong><%= Country.human_attribute_name(:reg_rel) %>:</strong>           <span style="color: red"><%= reghash[country.reg_rel.to_sym] %> (<%= I18n.t("navbar.wars") %>)</span>
        <% else %>
        <strong><%= Country.human_attribute_name(:reg_rel) %>:</strong>           <%= reghash[country.reg_rel.to_sym].split[0] %>
        <% end %>
      </li>
      <li class="nav-item">
        <strong><%= Country.human_attribute_name(:agriculture) %>:</strong>       <%= agrihash[country.agriculture.to_sym].split[0] %>
      </li>
      <li class="nav-item">
        <strong><%= Country.human_attribute_name(:education) %>:</strong>         <%= eduhash[country.education.to_sym].split[0] %>
      </li>
      <li class="nav-item">
        <strong><%= Country.human_attribute_name(:security) %>:</strong>          <%= securityhash[country.security.to_sym].split[0] %>
      </li>
      <li class="nav-item">
        <strong><%= Country.human_attribute_name(:comms) %>:</strong>             <%= commshash[country.comms.to_sym].split[0] %>
      </li>
      <li class="nav-item">
        <strong><%= Country.human_attribute_name(:social_sec) %>:</strong>        <%= social_sechash[country.social_sec.to_sym].split[0] %>
      </li>
      <li class="nav-item">
        <strong><%= Country.human_attribute_name(:health) %>:</strong>            <%= healthhash[country.health.to_sym].split[0] %>
      </li>
      <li class="nav-item">
        <strong><%= Country.human_attribute_name(:water) %>:</strong>             <%= waterhash[country.water.to_sym].split[0] %>
      </li>
      <li class="nav-item">
        <strong><%= Country.human_attribute_name(:energy) %>:</strong>            <%= energyhash[country.energy.to_sym].split[0] %>
      </li>
      </div>
    </ul>

  </div>
</nav>
<% end %>
