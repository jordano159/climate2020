        <%= link_to 'Options',      options_path %>
        <%= link_to 'Ministers',    ministers_path %>
        <%= link_to 'Goals',        goals_path %>
        <%= link_to('Logout',       destroy_admin_session_path, method: :delete) %>
        <%= Fact.all.sample.content if Fact.first.present? %>
      </div>
    <% end %>

    <div class="" dir="rtl">
      <%= yield %>
    </div>
    <%= render 'layouts/navbar' %>
    <div class="menu w-screen h-screen fixed-top bg-transparent p-5 ">
      <%= render 'layouts/data' %>
    </div>


